{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "declaration": false,
    "incremental": false,
    "removeComments": true,
    "target": "es2022" // Use a slightly older target to reduce memory usage
  },
  "exclude": [
    "node_modules", 
    "test", 
    "dist", 
    "**/*spec.ts",
    "**/*.test.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}